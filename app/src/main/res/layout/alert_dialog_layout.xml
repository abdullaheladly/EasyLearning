<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/alert_dialog"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/done"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answers_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15ssp"
        android:text="Done"/>
    <EditText
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/Quiz_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter  Quiz name"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/questions_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter how many questions"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Quiz_name"
        />
    <EditText
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/answers_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter quiz subject"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questions_number"
        />



</androidx.constraintlayout.widget.ConstraintLayout>